@model ProjectWebApplicatie.Models.Evenement

@{
    ViewBag.Title = "Bootstrap PopUp";
}

<title>@ViewBag.Title</title>


<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

@{
    var artiest = TempData["artiest"];
    var begintijd = TempData["begintijd"];
    var eindtijd = TempData["eindtijd"];
    var locatie = TempData["locatie"];
    var error = TempData["error"];
    var evenementID = TempData["dupeEventID"];
    
}

@Html.HiddenFor(model => model.EvenementID,
                     new { id= "EvenementID", Value = evenementID})


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    @error <\n>
                        Artiest: @artiest <\n>
                            Locatie: @locatie <\n>
                                Begintijd: @begintijd <\n>
                                    Eindtijd: @eindtijd <\n>

                </p>
            </div>
            <div class="modal-footer">
                <form action="/CMS/Create" Method="GET">
                    <input type="hidden" name="Eventsoort" value="Dance" />
                    <button type="submit">Discard current event</button>
                </form>
                @Html.ActionLink("Delete previous event", "Delete", new { ID = evenementID })
            </div>
        </div>
    </div>
</div>