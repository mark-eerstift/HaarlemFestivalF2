@model IEnumerable<ProjectWebApplicatie.Models.Food>

@{
    ViewBag.Title = "ViewFoodSales";
}

<h2>View Food Sales</h2>


@Html.ActionLink("View All Sales", "ViewEventSales") |
@Html.ActionLink("View Thursday Sales", "ViewEventSalesByDate", new DateTime(2019, 07, 27)) |
@Html.ActionLink("View Friday Sales", "ViewEventSalesByDate", new DateTime(2019, 07, 28)) |
@Html.ActionLink("View Saturday Sales", "ViewEventSalesByDate", new DateTime(2019, 07, 29)) |





<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant.RestaurantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeginTijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EindTijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketsTotaal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketsVerkocht)
        </th>
        
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant.RestaurantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginTijd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EindTijd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketsTotaal)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TicketsVerkocht)
            </td>

        </tr>
    }

</table>
